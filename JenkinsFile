pipeline {
  agent {
    docker {
        image 'node:16-alpine'
        args '-u root:root'
        reuseNode true
    }
  }
  stages {
    stage('Build') {
      steps {
        sh 'npm install'
        sh 'npm run build'
        sh 'npm run export'
      }
    }
    stage('Deploy') {
      steps {
        withAWS(credentials: 'aws-credentials') {
          s3Upload(pathStyleAccessEnabled: true, file: 'out/**', bucket: 'next-jenkins', workingDir: 'out')
        }
      }
    }
  }
  post {
    always {
      deleteDir()
    }
  }
}
